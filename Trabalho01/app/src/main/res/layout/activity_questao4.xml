<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A27"
    android:padding="20dp"
    tools:context=".Questao4Activity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#673AB7"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Vamos descobrir quantos Km/l seu carro faz"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Digite quantos Km foi percorrido:"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edtKm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:textColorHint="#306EFD"
        android:layout_marginTop="20dp"
        android:inputType="numberDecimal"
        android:hint="Distancia percorrida em Km"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Digite quantos Litros foi gasto:"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edtLitros"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:textColorHint="#306EFD"
        android:layout_marginTop="20dp"
        android:hint="Litros gastos"
        android:inputType="numberDecimal"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Deseja ver o resuldo por Km/l ou Mpg(Miles per gallon):"
        android:textColor="@color/white"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RadioButton
            android:id="@+id/radioKm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Km"
            android:textColor="@color/white"/>
        <RadioButton
            android:id="@+id/radioMiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miles"
            android:textColor="@color/white"
            />
    </RadioGroup>
    <Button
        android:id="@+id/btnCalcularConsumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtresultConsumo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="@color/white" />


</LinearLayout>
