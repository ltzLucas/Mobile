<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f333f"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".Questao7Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#673AB7"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Vamos calcular o volume de uma lata "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Insira o raio da lata:"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edtRaio"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:hint="Raio"
        android:textColorHint="#666666"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Insira a altura da lata:"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/edtAlturaLata"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:hint="Altura"
        android:textColorHint="#666666"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/btnCalcularVolumeLata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="Calcular"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/txtVolumeLata"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="@color/white"/>


</LinearLayout>